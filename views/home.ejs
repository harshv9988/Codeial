<div id="home-flex">
    

    <div class="home-flex-child" id="post-info">
        <h1>main codeial</h1>
        <div>
            <h4>posts</h4>
            <%if(locals.user){%>
                <form action="/posts/create" id="new-post-form" method="POST">
                    <textarea name="content" cols="30" rows="3"></textarea>
                    <input type="submit" value="Post">
                </form>    
            <%}%>
        </div>
        
        <div id="post-list-container">
            <ul>
                <%for(i of posts){%>
                    
                        <%- include('_post'); %>
                <%}%>
            </ul>
        </div>
    </div>

    <div class="home-flex-child right-text" id="user-info">
        <div>
            <h4>Users</h4>
            <%for(u of all_users){%>
                <p>
                    <a href="/users/profile/<%=u._id%>"><%=u.name%></a>
                </p>    
            <%}%>
        </div>
        <div>
            <%if(locals.user){%>
                <h4>Friends</h4>
                <%for(friends of all_friends.friendship){%>
                    <p>
                        <a href="/users/profile/<%=friends._id%>"><%=friends.name%></a>
                    </p>    
                <%}%>    
            <%}%>
        </div>
    </div>
</div>


