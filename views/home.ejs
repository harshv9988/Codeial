                                <h3 class="profile-pic-holder">
                                    <%if(u.avatar){%>
                                        <img src="<%=friends.avatar%>" alt="image">
                                    <%}else{%>
                                        <img src="/images/codeial-default-avatar2.png" alt="image">
                                    <%}%>
                                    
                                </h3>
                                <p>
                                    <a href="/users/profile/<%=friends._id%>"><%=friends.name%></a>
                                </p>    
                            </div>
                        <%}%>    
